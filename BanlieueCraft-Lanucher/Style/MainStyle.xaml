    <ControlTemplate x:Key="PageButton1" TargetType="ToggleButton">
        <Grid Name="Grid" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
            <Grid Name="Grid1">
                <StackPanel ScrollViewer.VerticalScrollBarVisibility="Disabled" Orientation="Horizontal" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                <TextBlock Name="Text01" Width="4" Height="38" Margin="0,0,16,0"></TextBlock>
                    <TextBlock Name="Image" Text="&#xe67e;"
                           Style="{DynamicResource Icon}" FontSize="24" Width="24" Height="24" Margin="0,0,5,10"></TextBlock>
                <TextBlock Name="Text02" Foreground="White" Width="97" Height="38" Margin="5,10,94,10" TextAlignment="Left" Text="{TemplateBinding ContentControl.Content}" FontWeight="Bold" FontSize="14" RenderTransformOrigin="0.5,0.5" ></TextBlock>
            </StackPanel>
            </Grid>
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#252e4e" TargetName="Grid"></Setter>
                <Setter Property="RenderTransform" TargetName="Grid1">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1.05" ScaleY="1.05" CenterX="0" CenterY="0"></ScaleTransform>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Background" Value="#232b4b" TargetName="Grid"></Setter>
                <Setter Property="Background" Value="#FF00FFE8" TargetName="Text01"></Setter>
                <Setter Property="Foreground" Value="#FF00FFE8" TargetName="Image"></Setter>
                <Setter Property="Foreground" Value="White" TargetName="Text02"></Setter>
                <Setter Property="RenderTransform" TargetName="Grid1">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1.1" ScaleY="1" CenterX="0" CenterY="0"></ScaleTransform>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
